<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/linear_item_lost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_item_lost_name"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_marginRight="2dp"
            android:singleLine="true" >
        </TextView>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="ï¼š" >
        </TextView>

        <TextView
            android:id="@+id/tv_item_lost_title"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:singleLine="true" >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_lost_content"
        style="@style/Smile.TextView._Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_item_lost_title"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:minLines="1"
        android:textSize="16sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_item_lost_time"
        style="@style/Smile.TextView._Gray"
        android:layout_below="@id/tv_item_lost_content"
        android:layout_marginTop="10dp"
        android:textSize="12sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_item_lost_telephone"
        style="@style/Smile.TextView._White"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_item_lost_content"
        android:layout_marginTop="10dp"
        android:background="@color/green"
        android:drawableLeft="@drawable/icon_photo"
        android:drawablePadding="5dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:textSize="12sp" >
    </TextView>

</RelativeLayout>